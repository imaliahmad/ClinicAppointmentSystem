
@model CAS.BOL.Doctors
@{
    ViewData["Title"] = "CreateorEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/doctors/doctors-create-edit.css" rel="stylesheet"/>
<div class="container">
    <br />
    <h1>Details</h1>
    <br />
    <h4>Doctor</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateorEdit">
                <input type="hidden" asp-for="DId" />
                <div class="row row-1">
                    <div class="col-md-2">
                       <label asp-for="Name" class="control-label"></label>
                    </div>
                    <div class="col-md-6">
                       <input asp-for="Name" disabled class="form-control" />
                       <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row row-1">
                    <div class="col-md-2">
                       <label asp-for="Degree" class="control-label"></label>
                    </div>
                    <div class="col-md-6">
                       <input asp-for="Degree" disabled class="form-control" />
                       <span asp-validation-for="Degree" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row row-1">
                    <div class="col-md-2">
                       <label asp-for="Speciallity" class="control-label"></label>
                    </div>
                    <div class="col-md-6">
                       <input asp-for="Speciallity" disabled class="form-control" />
                       <span asp-validation-for="Speciallity" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row row-1">
                    <div class="col-md-2">
                       <label asp-for="Salary" class="control-label"></label>
                    </div>
                    <div class="col-md-6">
                       <input asp-for="Salary" disabled class="form-control" />
                       <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row row-1">
                    <div class="col-md-2">
                       <label asp-for="PhoneNo" class="control-label"></label>
                    </div>
                    <div class="col-md-6">
                       <input asp-for="PhoneNo" disabled class="form-control" />
                       <span asp-validation-for="PhoneNo" class="text-danger"></span>
                    </div>
                </div>
            </form>
            <hr />
        </div>
    </div>
</div>